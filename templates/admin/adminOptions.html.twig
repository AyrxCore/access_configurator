<div class="tab-pane" id="tab_4">
    <table class="table table-bordered option-list">
        <tr>
            <th style="width: 10%;">Nom</th>
            <th style="width: 10%;">Prix</th>
            <th style="width: 30%;">Description</th>
            <th style="width: 5%;">Actions</th>
        </tr>
        {% for option in options %}
            <tr>
                <td><a href="#" class="name">{{ option.name }}</a> <i class="fas fa-pen-alt min-size"></i></td>
                <td><a href="#" class="price">{{ option.price }} â‚¬</a> <i class="fas fa-pen-alt min-size"></i></td>
                <td><a href="#" class="description">{{ option.description }}</a> <i class="fas fa-pen-alt min-size"></i></td>
                <td class="list-actions">
                    <button class="trash-element"><i class="fas fa-trash-alt"></i></button>
                </td>
                <input class="action-id" type="hidden" value="{{ option.id }}">
            </tr>
        {% endfor %}
    </table>
    <div class="box-footer clearfix">
        <form role="form" id="form-admin">
            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        {{ form_row(formOptions.name) }}
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        {{ form_row(formOptions.price) }}
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        {{ form_row(formOptions.description) }}
                    </div>
                </div>
                <div class="col-sm align-self-center">
                    <div class="form-group">
                        <button type="submit" class="btn bg-olive margin add-element" data-type="options">Ajouter</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>