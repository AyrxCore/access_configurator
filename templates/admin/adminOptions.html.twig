<div class="tab-pane" id="tab_4">
    <table class="table table-bordered option-list">
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>
        {% for option in options %}
            <input type="hidden" value="{{ option.id }}">
            <tr>
                <td>{{ option.name }}</td>
                <td>{{ option.price }} â‚¬</td>
                <td>
                    <button><i class="fas fa-trash-alt"></i></button>
                    <button><i class="fas fa-edit"></i></button>
                </td>
            </tr>
        {% endfor %}
    </table>
    <div class="box-footer clearfix">
        <form role="form" id="form-admin">
            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        {{ form_row(formOptions.name) }}
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        {{ form_row(formOptions.price) }}
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        {{ form_row(formOptions.description) }}
                    </div>
                </div>
                <div class="col-sm align-self-center">
                    <div class="form-group">
                        <button type="submit" class="btn bg-olive margin add-element" data-type="options">Ajouter</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>