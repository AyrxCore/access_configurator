{% extends 'base.html.twig' %}

{% block content %}

    <section class="content-header">
        <h1>Choix de la surface</h1>
        <ol class="breadcrumb">
            <li class="active"><a href="http://localhost/access_configurator/public/index.php/?name='{{ model.name }}'">Modèle</a></li>
            <li class="active">Surface</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">

            <section class="col-lg-12 connectedSortable d-flex justify-content-around">
                {% for element in sizes %}
                    <div class="card" style="width: 30rem;">
                        <img src="{{ asset('images/size/' ~ element.imgRdc) }}" class="card-img-top" alt="...">
                        <img src="{{ asset('images/size/' ~ element.imgFloor) }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text">Modèle de {{ element.surface }}m²</p>
                            <p class="card-text">{{ element.description }}</p>
                            <p class="card-text">A partir de {{ element.price }} €</p>
                            <a href="{{ element.name ~ '/' ~ element.surface }}" class="btn btn-primary">Choisir cette surface</a>
                        </div>
                    </div>
                {% endfor %}
            </section>

        </div>
    </section>
{% endblock %}